#!/usr/bin/env php
<?php

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

use Diff\Comparator\Differ;

$doc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: stylish]
DOC;

$args        = Docopt::handle($doc, ['version'=>'gendiff v. 1.0']);

$pathToFile1 = $args['<firstFile>'];
$pathToFile2 = $args['<secondFile>'];
$format      = $args['--format'];

$difference  = Differ::genDiff($pathToFile1, $pathToFile2, $format);
echo $difference;

// bin/gendiff --format stylish tests/fixtures/file1.json tests/fixtures/file2.json
// bin/gendiff --format plain tests/fixtures/file1.json tests/fixtures/file2.json
// bin/gendiff --format json tests/fixtures/file1.json tests/fixtures/file2.json

// bin/gendiff --format stylish tests/fixtures/file1.yml tests/fixtures/file2.yml
// bin/gendiff --format plain tests/fixtures/file1.yml tests/fixtures/file2.yml
// bin/gendiff --format json tests/fixtures/file1.yml tests/fixtures/file2.yml
